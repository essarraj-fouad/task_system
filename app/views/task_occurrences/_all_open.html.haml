%tr{:class => (all_open.too_late? ? 'error' : '')}
  %td= all_open.task.name.truncate(30)
  %td
    - if all_open.user
      = all_open.user.name
    - else
      = t('activerecord.attributes.task_occurrence.allocated_to.nobody') 
      %br
      %small= t('activerecord.attributes.task.allocation_modes_short.voluntary') 

  %td= l all_open.task.time, format: :time_only
  %td= l all_open.deadline, format: :long
  %td
    - if community_admin?
      = image_button 'iconic/reload_12x14.png', reassign_community_task_occurrence_path(@community, all_open), remote: true, data: {title: t('.reassign')}, class: 'tooltip-link'
      = image_button 'iconic/trash_fill_12x12.png', community_task_occurrence_path(@community, all_open), method: :delete, confirm: t('messages.confirm'), data: {title: t('.delete')}, class: 'tooltip-link'
