<!DOCTYPE HTML>
%html
  %head
    %title Task System
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %div.navbar.navbar-inverse  
      %div.navbar-inner 
        %ul.nav
          = tab_link t('layout.communities'), communities_path
          - if (@community.present? and !@community.new_record?)
            - #tab_link t('layout.tasks'), community_tasks_path(@community)
            %li.dropdown
              = link_to t('layout.tasks'), '#', :class => 'dropdown-toggle', 'data-toggle' => 'dropdown'
              %ul.dropdown-menu
                %li= link_to t('menu.overview'), community_tasks_path(@community)
                %li= link_to t('menu.schedule'), community_task_occurrences_path(@community)

    %div.container
      %div.row
        %div.span9
          - if flash[:notice]
            %div.alert.alert-success= flash[:notice]
          - if flash[:error]
            %div.alert.alert-error= flash[:error]
          - if flash[:info]
            %div.alert.alert-block= flash[:info]
          =yield
        %div.span3= yield :menu
