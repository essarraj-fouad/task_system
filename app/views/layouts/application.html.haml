<!DOCTYPE HTML>
%html
  %head
    %title Task System
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %div.navbar.navbar-inverse  
      %div.navbar-inner 
        %ul.nav
          = tab_link t('.communities'), communities_path
          - if (@community.present? and !@community.new_record?)
            - #tab_link t('layout.tasks'), community_tasks_path(@community)
            %li.dropdown
              = link_to t('.tasks'), '#', :class => 'dropdown-toggle', 'data-toggle' => 'dropdown'
              %ul.dropdown-menu
                %li.nav-header= t('.tasks')
                %li= link_to t('.overview'), community_tasks_path(@community)
                %li= link_to t('.create'), new_community_task_path(@community)
                %li.nav-header= t('.schedule')
                %li= link_to t('.todos'), todo_community_task_occurrences_path(@community)
                %li= link_to t('.open'), open_community_task_occurrences_path(@community)
                %li= link_to t('.completed'), completed_community_task_occurrences_path(@community)

    %div.container
      %div.row
        %div.span9
          %div#flash-container
            = render partial: 'shared/ajax_flash'
          =yield
        %div.span3= yield :menu
