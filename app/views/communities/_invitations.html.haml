- show_accept ||= false
%p
  %table.table.table-striped
    %tr.line
      %th= image_tag('iconic/mail_16x12.png') + (show_accept ? t('communities.index.invitations') : t('activerecord.models.invitations'))
      %th
      %th
      %th
    %tr
      %th= t('activerecord.attributes.invitation.invitor')
      %th
        = show_accept ? t('activerecord.attributes.invitation.community') : t('activerecord.attributes.invitation.invitee_email')
      %th= t('activerecord.attributes.invitation.created_at')
      %th

    = render partial: 'invitation', collection: @invitations, locals: {show_accept: show_accept}