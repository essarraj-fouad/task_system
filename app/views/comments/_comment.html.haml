%div.comment{:id => "comment_#{comment.id}"}
  %div.comment-header
    - if comment.user.avatar.present?
      = image_tag comment.user.avatar.url(:small)
    - else
      = image_tag 'iconic/right_quote_32x24.png', class: 'user-logo'
    %strong= comment.user.name
    %br
    %small= l comment.created_at.localtime, format: :short
    %div.comment-actions
      - if can_edit_object? comment
        = image_button 'iconic/trash_fill_12x12.png', community_task_occurrence_comment_path(@community, comment.commentable, comment), method: :delete, remote: true, confirm: t('messages.confirm'), data: {title: t('actions.delete')}, class: 'tooltip-link'

  %div.comment-body= comment.body