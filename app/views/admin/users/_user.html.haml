%tr
  %td= user.name
  %td= user.global_role
  %td= user.communities.count
  %td= image_tag user.confirmed? ? 'success-small.png': 'fail-small.png'
  %td= l(user.last_sign_in_at.localtime, format: :short) unless user.last_sign_in_at.nil?
  %td
    = image_button 'iconic/pen_12x12.png', edit_admin_user_path(user)
    = image_button 'iconic/trash_fill_12x12.png', admin_user_path(user), method: :delete, confirm: t('messages.confirm')